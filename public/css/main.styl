item-size = 6em

html
  height 100%

body
  border 0
  margin 0
  padding 0
  height 100%
  background-color #fdf6e3
  font 1em 'Lato', sans-serif
  
input
  border none
  background-color inherit

#container
  height 100%
  
#headwrap
  width 100%
  border-bottom .12em solid #dc322f  
#header
  width 100%
  min-height 2em
  padding-top .2em
  padding-bottom .2em
  border-bottom .25em solid #cb4b16
  background-color #eee8d5
  color #cb4b16
  display flex
  flex-direction row
  flex-wrap wrap
  align-items center
  margin 0

.headpad
  padding-left 1em
  
#menubtn
  height 1.4em
  width 1.4em
#menubtn>svg
  fill: #fdf6e3
#menubtn:hover>svg
  fill: #cb4b16
  
#utils
  height 100%
  flex-grow 3
  display flex
  flex-direction row-reverse
  align-items center
  
#title
  flex-grow 1
  font 1.4em 'Yanone Kaffeesatz', sans-serif
  
.util
  height 1.4em
  background-color #fdf6e3
  border .1em solid #cb4b16
  border-radius .3em
  margin-right .1em
  margin-left .1em
  
.util.button
  width 1.4em

#urltext
  display block
  font 0.8em 'Lato', sans-serif
  width 30em

#contentwrap
  width 100%
  height 100%
  display flex
  flex-direction row
  
#menuwrap
  width 0em
  overflow hidden
  height 100%
  
#menu
  width 0em
  background-color #eee8d5
  height 100%
  
#content
  width 100%
  height 100%
  display flex
  flex-direction column

div#content>div
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content: center
    
.item
  height item-size
  width item-size
  margin .2em
  border .1em solid #cb4b16
  border-radius .3em
.item:hover
  background-color #eee8d5